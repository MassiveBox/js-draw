{
	"name": "js-draw",
	"version": "0.22.0",
	"description": "Draw pictures using a pen, touchscreen, or mouse! JS-draw is a drawing library for JavaScript and TypeScript. ",
	"types": "./dist/mjs/src/lib.d.ts",
	"main": "./dist/cjs/src/lib.js",
	"exports": {
		".": {
			"types": "./dist/mjs/src/lib.d.ts",
			"import": "./dist/mjs/src/lib.mjs",
			"require": "./dist/cjs/src/lib.js"
		},
		"./styles": {
			"default": "./src/styles.js"
		},
		"./Editor.css": {
			"default": "./src/Editor.css"
		},
		"./bundle": {
			"types": "./dist/mjs/src/bundle/bundled.d.ts",
			"default": "./dist/bundle.js"
		},
		"./bundledStyles": {
			"default": "./dist/bundledStyles.js"
		},
		"./Editor": {
			"types": "./dist/mjs/src/Editor.d.ts",
			"default": "./dist/mjs/src/Editor.mjs"
		},
		"./types": {
			"types": "./dist/mjs/src/types.d.ts",
			"default": "./dist/mjs/src/types.mjs"
		},
		"./localization": {
			"types": "./dist/mjs/src/localization.d.ts",
			"default": "./dist/mjs/src/localization.mjs"
		},
		"./toolbar/HTMLToolbar": {
			"types": "./dist/mjs/src/toolbar/HTMLToolbar.d.ts",
			"default": "./dist/mjs/src/toolbar/HTMLToolbar.mjs"
		},
		"./math": {
			"types": "./dist/mjs/src/math/lib.d.ts",
			"import": "./dist/mjs/src/math/lib.mjs",
			"require": "./dist/cjs/src/math/lib.js"
		},
		"./Color4": {
			"types": "./dist/mjs/src/Color4.d.ts",
			"import": "./dist/mjs/src/Color4.mjs",
			"require": "./dist/cjs/src/Color4.js"
		},
		"./components": {
			"types": "./dist/mjs/src/components/lib.d.ts",
			"default": "./dist/mjs/src/components/lib.mjs"
		},
		"./commands": {
			"types": "./dist/mjs/src/commands/lib.d.ts",
			"default": "./dist/mjs/src/commands/lib.mjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/personalizedrefrigerator/js-draw.git"
	},
	"author": "Henry Heino",
	"license": "MIT",
	"private": false,
	"scripts": {
		"test": "jest",
		"dist-test": "cd dist-test/test_imports && yarn install && yarn test",
		"dist": "yarn build && yarn dist-test",
		"build": "rm -rf ./dist; mkdir dist && tsc -p tsconfig.mjs.json && tsc && ts-node ./build_tools/postDist.ts && ts-node ./build_tools/bundle.ts",
		"doc": "typedoc --options typedoc.json",
		"watch-docs": "typedoc --watch --options typedoc.json",
		"lint": "eslint .",
		"linter-precommit": "eslint --fix --ext .js --ext .ts",
		"lint-staged": "lint-staged",
		"lint-ci": "eslint . --max-warnings=0 --ext .js --ext .ts",
		"build-translation-template": "ts-node ./build_tools/buildTranslationTemplate.ts",
		"prepare": "husky install && yarn build",
		"prepack": "yarn build && yarn test && pinst --disable",
		"postpack": "pinst --enable"
	},
	"dependencies": {
		"@melloware/coloris": "^0.18.0",
		"bezier-js": "^6.1.3"
	},
	"devDependencies": {
		"@types/bezier-js": "^4.1.0",
		"@types/jest": "^29.5.0",
		"@types/jsdom": "^21.1.1",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"css-loader": "^6.7.3",
		"eslint": "^8.38.0",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"jsdom": "^21.1.1",
		"lint-staged": "^13.2.1",
		"pinst": "^3.0.0",
		"style-loader": "^3.3.2",
		"terser-webpack-plugin": "^5.3.7",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typedoc": "^0.24.1",
		"typescript": "^5.0.4",
		"webpack": "^5.78.0"
	},
	"bugs": {
		"url": "https://github.com/personalizedrefrigerator/js-draw/issues"
	},
	"homepage": "https://github.com/personalizedrefrigerator/js-draw#readme",
	"directories": {
		"doc": "docs"
	},
	"keywords": [
		"ink",
		"drawing",
		"pen",
		"freehand",
		"svg"
	]
}
