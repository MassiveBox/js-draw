{
	"entryPoints": [
		"./packages/js-draw/src/lib.ts",
		"./packages/math/src/lib.ts",
		"./packages/material-icons/src/lib.ts",

		"./docs/doc-pages/typedoc.ts"
	],
	"entryPointStrategy": "resolve",
	"name": "js-draw",
	"out": "docs/typedoc/",
	"plugin": [ "@js-draw/typedoc-extensions" ],

	"exclude": [
		"**/*.test.ts",
		"node_modules/**",
		"**/dist/**",
		"**/dist-test/**",
		"src/testing/"
	],

	"includes": "docs/",
	"theme": "js-draw-theme",

	"sidebarReplacements": {
		"docs/doc-pages/typedoc": "More Documentation",
		"packages/js-draw/src/lib": "js-draw - {{version}}",
		"packages/math/src/lib": "@js-draw/math - {{version}}",
		"packages/material-icons/src/lib": "@js-draw/material-icons - {{version}}",
		"MigratingToVersion1": "Migrating to version 1"
	},

	"excludePrivate": true,
	"excludeInternal": true,
	"includeVersion": false,
	"commentStyle": "all",

	"readme": "README.md",
	"tsconfig": "tsconfig-typedoc.json",

	"validation": {
		"notExported": false,
		"invalidLink": true,
		"notDocumented": false
	}
}
